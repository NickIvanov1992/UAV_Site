@model IQueryable<ServiceItem>

    @if(Model?.Any() == true)
{
    <section>
        <h2>Наши услуги</h2>
        <ul class="small-image-list">
              @foreach(ServiceItem entity in Model)
            {
                <li>
                    <a asp-area="" asp-controller="Services" asp-action="Index" method="post" asp-route-itemid="@entity.Id">
                        <img src="~/images/@entity.TitleImagePath" alt="" width="200px" class="left" />
                    </a>
                    <h4>
                        @entity.Title
                    </h4>
                    <p>
                        @entity.Subtitle
                    </p>
                </li>
            }
        </ul>
    </section>
}
